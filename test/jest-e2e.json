{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": "test/.*.e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@project-common/(.*)$": "<rootDir>/src/common/$1",
    "^@project-modules/(.*)$": "<rootDir>/src/modules/$1",
    "^@project-infrastructure/(.*)$": "<rootDir>/src/infrastructure/$1",
    "^@project-utils/(.*)$": "<rootDir>/src/utils/$1"
  }
}